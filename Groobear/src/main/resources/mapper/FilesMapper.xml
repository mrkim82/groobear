<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.groo.bear.files.mapper.FilesMapper">
  	
  	<insert id="insert" parameterType="FilesVO">
  		insert into files (
  						    UUID
  						   ,UPLOAD_PATH
  						   ,FILE_NAME
  						   ,FILE_TYPE
  						   ,FILE_DATE
  						   ,${name}
  							)
  				VALUES 
  						  (
  						    #{uuid}
  						    ,#{uploadPath}
  						    ,#{fileName}
  						    ,#{fileType}
  						    ,sysdate
  						    ,#{no}
  						   )
  	</insert>
  	
  	<delete id="delete" parameterType="String">
  		delete from files where uuid = #{uuid}
  	</delete>
  	
  	<delete id="deleteAll">
  		delete from files where ${name} = #{no}
  	</delete>
  	
  	<select id="findByNo" resultType="FilesVO">
  		select * from files where ${name} = #{no}
  	</select>
  	<!-- 프로필 사진 등록 -->
  	<insert id="insertProfImg" parameterType="EmpVO">
  		insert into files (
  						    UUID
  						   ,UPLOAD_PATH
  						   ,FILE_NAME
  						   ,FILE_TYPE
  						   ,FILE_DATE
  						   ,ID
  							)
  				VALUES 
  						  (
  						    #{uuid}
  						    ,#{uploadPath}
  						    ,#{fileName}
  						    ,'1'
  						    ,sysdate
  						    ,#{id})
  	</insert>
  	
  	<!-- 프로필 사진 삭제 -->
  	<delete id="deleteProfImg" parameterType="String">
  		delete files where id = #{id}
  	</delete>
  	
  	<select id="getOldFiles" resultType="FilesVO">
  		select * from files where upload_path = to_char(sysdate -1 , 'yyyy/mm/dd')
  	</select>
  	<!-- 사원 개인 서명 등록 -->
  	<insert id="insertSignImg" parameterType="EmpVO">
  		insert into files (
  							UUID
  							,UPLOAD_PATH
  							,FILE_NAME
  							,FILE_TYPE
  							,FILE_DATE
  							,SIGN_NO)
  					VALUES
  							(
  							#{uuid}
  							,#{uploadPath}
  							,#{fileName}
  							,'1'
  							,sysdate
  							,#{empNo}
  							)
  	</insert>
  	<!-- 사원 개인 서명 삭제 -->
  	<delete id="deleteSignImg" parameterType="int">
  		delete files where sign_no = #{signNo}
  	</delete>
  	<!-- 사원 개인 서명 조회 -->
  	<select id="searchSignImg" parameterType="int">
  		select * from files where sign_no = #{empNo}  
  	</select>
  	<!-- 운행일지 차량 운행거리사진 등록 -->
  	<insert id="logInsert" parameterType="FilesVO">
  		insert into files(
  							UUID
  							,UPLOAD_PATH
  							,FILE_NAME
  							,FILE_TYPE
  							,FILE_DATE
  							,PAY_NO
  							) 
  					VALUES(
  							#{uuid}
  							,#{uploadPath}
  							,#{fileName}
  							,'1'
  							,sysdate
  							,#{payNo}
  					)
  	</insert>
  	<!-- 연차계 첨부파일 등록 -->
  	<insert id="offInsert" parameterType="FilesVO">
  		insert into files(
  							UUID
  							,UPLOAD_PATH
  							,FILE_NAME
  							,FILE_TYPE
  							,FILE_DATE
  							,PAY_NO
  							)
  					VALUES(
  							#{uuid}
  							,#{uploadPath}
  							,#{fileName}
  							,'1'
  							,sysdate
  							,#{payNo}
  					)
  	</insert>
  	<insert id="robinInsert" parameterType="FilesVO">
  		insert into files(
  							UUID
  							,UPLOAD_PATH
  							,FILE_NAME
  							,FILE_TYPE
  							,FILE_DATE
  							,PAY_NO
  							)
  					VALUES(
  							#{uuid}
  							,#{uploadPath}
  							,#{fileName}
  							,'1'
  							,sysdate
  							,#{payNo}
  					)
  	</insert>
  </mapper>